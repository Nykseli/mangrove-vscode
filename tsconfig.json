{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"outDir": "build",
		"lib": ["ES6"],
		"sourceMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"],
	"exclude": [
		"node_modules"
	]
}
